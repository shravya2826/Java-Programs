public class LeftShiftExample {
    public static void main(String[] args) {
        int a = 5;   // 0101
        int result = a << 2; // 0101 → 10100 = 20
        System.out.println("a << 2 = " + result);
    }
}
public class RightShiftExample {
    public static void main(String[] args) {
        int a = 20;   // 10100
        int result = a >> 2; // 10100 → 101 = 5
        System.out.println("a >> 2 = " + result);
    }
}
